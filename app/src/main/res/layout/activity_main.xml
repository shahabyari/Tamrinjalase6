<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical"
    tools:context="com.shahabyari.arpaneteniac.tamrinjalase6.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@color/colortoolbar"
        android:orientation="horizontal"
        android:weightSum="3">

        <ImageView
            android:layout_width="0sp"
            android:layout_height="30sp"
            android:layout_marginTop="11sp"
            android:layout_weight="1"
            android:src="@drawable/menu"


            />

        <TextView
            android:layout_width="100sp"
            android:layout_height="30sp"
            android:layout_marginTop="11sp"
            android:layout_weight="1"
            android:text="shahab"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginTop="11sp"
            android:layout_weight="1"


            android:src="@drawable/search" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="#AFFF"
        android:orientation="horizontal"
        android:weightSum="3"


        >

        <ImageView
            android:layout_width="0sp"
            android:layout_height="30sp"
            android:layout_marginTop="11sp"
            android:layout_weight="1"
            android:src="@drawable/lefticon"

            />

        <TextView
            android:layout_width="100sp"
            android:layout_height="30sp"
            android:layout_marginTop="11sp"
            android:layout_weight="1"
            android:text="Profile"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginTop="11sp"
            android:layout_weight="1"


            android:src="@drawable/righticon" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150sp"

        android:orientation="horizontal"
        android:weightSum="3"


        >

        <ImageView
            android:layout_width="0sp"
            android:layout_height="90sp"
            android:layout_marginLeft="30sp"
            android:layout_marginTop="31sp"
            android:layout_weight="1"
            android:background="@drawable/toolbarlight"
            android:src="@drawable/user"


            />

        <LinearLayout
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:layout_width="143dp"
                android:layout_height="30sp"
                android:layout_marginLeft="01sp"
                android:layout_marginTop="50sp"

                android:text="Your Name"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="22sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="143sp"
                android:layout_height="30sp"
                android:layout_marginLeft="21sp"


                android:text="DescDescDescDesc"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                />
        </LinearLayout>



    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/editback"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:hint="UserName"
        android:textColorHint="@android:color/holo_red_dark"
        android:paddingLeft="20sp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:background="@drawable/editback"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:layout_marginTop="5sp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColorHint="@android:color/holo_red_dark"
        android:paddingLeft="20sp"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:layout_marginTop="20sp"
        android:layout_marginLeft="60sp"
        android:layout_marginRight="60sp"
        android:background="@drawable/loginbutton"
        android:text="Login"
        android:drawableLeft="@drawable/login"
        android:paddingLeft="20sp"
        android:paddingRight="60sp"
        android:textColor="@android:color/white"
        android:textSize="17sp"
        android:onClick="launchRingDialog"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="3"
        >
<TextView
    android:layout_weight="1"
    android:layout_width="0sp"
    android:layout_height="wrap_content"
    android:text="Setting"
    android:textColor="@android:color/white"
    android:drawableTop="@drawable/settings"
    android:textAlignment="center"
    android:layout_marginTop="30sp"
    android:textSize="17sp"
    />
        <TextView
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Alarm"
            android:textColor="@android:color/white"
            android:drawableTop="@drawable/stopwatch"
            android:textAlignment="center"
            android:layout_marginTop="30sp"
            android:textSize="17sp"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:text="Info"
            android:textColor="@android:color/white"
            android:drawableTop="@drawable/idea"
            android:textAlignment="center"
            android:layout_marginTop="30sp"
            android:textSize="17sp"
            />


    </LinearLayout>


</LinearLayout>
