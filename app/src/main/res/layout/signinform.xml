<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    android:orientation="vertical"
    tools:context="com.shahabyari.arpaneteniac.tamrinjalase6.MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:background="@color/colortrans"
        android:paddingRight="50sp"
        android:text="فرم ثبت نام"
        android:textColor="@android:color/white"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/txtusername"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/editback"
        android:hint="نام کاربری"
        android:paddingLeft="20sp"
        android:paddingRight="30sp"
        android:textColorHint="@android:color/holo_red_dark"
         android:text=""
        />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/editback"
        android:gravity="right"
        android:hint="ایمیل"
        android:inputType="textEmailAddress"
        android:paddingRight="30sp"
        android:paddingTop="10sp"
        android:textColorHint="@android:color/holo_red_dark"
        android:text=""
        />

    <EditText
        android:id="@+id/txtpass"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/editback"
        android:gravity="right"
        android:hint="پسورد"
        android:inputType="textPassword"
        android:paddingRight="30sp"
        android:paddingTop="10sp"
        android:textColorHint="@android:color/holo_red_dark"
        android:text=""
        />

    <EditText
        android:id="@+id/txtpassrep"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/editback"
        android:gravity="right"
        android:hint="تکرار پسورد"
        android:inputType="textPassword"
        android:paddingRight="30sp"
        android:paddingTop="10sp"
        android:textColorHint="@android:color/holo_red_dark"
        android:text=""
        />

    <EditText
        android:id="@+id/txtmobile"
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:layout_marginTop="10sp"
        android:background="@drawable/editback"
        android:gravity="right"
        android:hint="شماره تلفن"
        android:inputType="phone"
        android:paddingRight="30sp"
        android:paddingTop="10sp"
        android:textColorHint="@android:color/holo_red_dark"
        android:text=""
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70sp"
            android:layout_marginTop="10sp"
            android:src="@drawable/calendar"
            android:id="@+id/imagecal"
            android:onClick="setDate"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="50sp"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="50sp"
            android:layout_marginTop="10sp"
            android:background="@drawable/editback"
            android:gravity="right"
            android:hint="تاریخ تولد"
            android:textAlignment="center"
            android:paddingRight="30sp"
            android:paddingTop="15sp"
            android:textColorHint="@android:color/holo_red_dark"
            android:id="@+id/textviewdate"

            />


    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="50sp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:layout_marginTop="5sp"
        android:gravity="right"
        android:textAlignment="center"
        android:paddingRight="30sp"
        android:paddingTop="15sp"
        android:textColorHint="@android:color/holo_red_dark"
        android:id="@+id/Lableviewdate"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:weightSum="1">

        <Button
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="50sp"
            android:layout_marginLeft="60sp"
            android:layout_marginRight="60sp"
            android:layout_marginTop="5sp"
            android:background="@drawable/singinbutton"
            android:onClick="launchRingDialog"
            android:text="ثبت نام"
            android:textColor="@android:color/white"
            android:textSize="20sp"

            />

    </LinearLayout>


</LinearLayout>
